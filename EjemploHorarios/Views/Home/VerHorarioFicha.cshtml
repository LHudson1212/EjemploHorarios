@model IEnumerable<EjemploHorarios.Models.HorarioInstructor>
@using System.Linq

@{
    ViewBag.Title = "Horario de Ficha";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string[] dias = new[] { "Lunes", "Martes", "Miércoles", "Jueves", "Viernes", "Sábado" };
    // ✅ Corrección: formato de hora válido
    Func<TimeSpan?, string> fmt = t => t.HasValue ? t.Value.ToString(@"hh\:mm") : "--:--";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">

<style>
    :root {
        --sena-green: #008037;
        --sena-green-light: #00a859;
        --sena-green-dark: #006028;
    }

    body {
        background: #f0fdf4;
        font-family: 'Segoe UI', sans-serif;
    }

    .horario-container {
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0,0,0,.08);
        overflow: hidden;
    }

    .horario-header {
        background: linear-gradient(135deg, var(--sena-green), var(--sena-green-light));
        color: #fff;
        padding: 12px 16px;
        font-weight: 700;
    }

    .horario-dias {
        display: flex;
        gap: .75rem;
        overflow-x: auto;
        padding: 1rem;
    }

    .dia {
        flex: 1;
        min-width: 180px;
        background: linear-gradient(180deg, #f6fff6, #fff);
        border: 2px dashed #b6e4c3;
        border-radius: 12px;
    }

        .dia h5 {
            margin: 0;
            background: var(--sena-green);
            color: #fff;
            padding: .5rem;
            border-radius: 9px 9px 0 0;
            text-align: center;
        }

    .slot {
        padding: .5rem .6rem;
    }

    .asignacion {
        background: #dcfce7;
        border: 1px solid #b6e4c3;
        border-radius: 10px;
        padding: .6rem;
        margin: .5rem .4rem;
        font-size: .92rem;
    }

        .asignacion strong {
            color: var(--sena-green-dark);
        }

    .muted {
        color: #6b7280;
    }

    .btn-volver,
    .btn-siguiente {
        background: linear-gradient(135deg, var(--sena-green), var(--sena-green-light));
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: .45rem .9rem;
        font-weight: 600;
        transition: all 0.2s ease;
    }

        .btn-volver:hover,
        .btn-siguiente:hover {
            background: linear-gradient(135deg, var(--sena-green-dark), var(--sena-green));
            transform: translateY(-2px);
        }

    .btn-siguiente {
        background: linear-gradient(135deg, var(--sena-green-light), var(--sena-green));
    }

        .btn-siguiente i {
            font-size: 1rem;
        }
</style>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold text-success">
            <i class="bi bi-journal-text me-2"></i> Horario Ficha @ViewBag.CodigoFicha
        </h3>
        <div>
            <!-- 🔙 Botón volver -->
            <button class="btn-volver me-2" onclick="location.href='@Url.Action("ListaHorarios","Home")'">
                <i class="bi bi-arrow-left-circle me-1"></i> Volver
            </button>

            <!-- ➕ Botón crear siguiente horario -->
            <button class="btn-siguiente"
                    onclick="location.href='@Url.Action("CrearSiguienteHorario","Home", new { idFicha = Model.FirstOrDefault()?.IdFicha ?? 0, trimestre = ViewBag.TrimestreActual ?? 1 })'">
                <i class="bi bi-plus-circle me-1"></i> Crear siguiente horario
            </button>
        </div>
    </div>

    <div class="horario-container">
        <div class="horario-header">Días de formación</div>

        <div class="horario-dias">
            @foreach (var d in dias)
            {
                var asignaciones = Model.Where(h => h.Dia == d).ToList();
                <div class="dia">
                    <h5>@d</h5>
                    <div class="slot">
                        @if (asignaciones.Any())
                        {
                            foreach (var a in asignaciones)
                            {
                                <div class="asignacion">
                                    <strong>@(a.Instructor?.NombreCompletoInstructor ?? "Instructor")</strong><br />
                                    <div>@(a.Competencia ?? "")</div>
                                    <small class="muted d-block">@((a.Resultado ?? ""))</small>
                                    <small class="muted">
                                        <i class="bi bi-clock"></i> @fmt(a.HoraDesde) – @fmt(a.HoraHasta)
                                    </small>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-muted text-center py-3">Sin asignaciones</div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>