                <div class="fw-bold fs-4 text-primary">@Model.TotalProgramadas</div>
            </div>
            <div class="col-md-4">
                <h6 class="text-muted mb-1">Horas pendientes</h6>
                <div class="fw-bold fs-4 text-danger">@Model.TotalPendientes</div>
            </div>
        </div>
    </div>

    <!-- HORARIO POR DÍAS -->
    <div class="horario-container mt-3">
        <div class="horario-header">Días de formación</div>

        <div class="horario-dias">
            @foreach (var d in dias)
            {
                var asignaciones = Model.DetalleHorario.Where(h => h.Dia == d).ToList();

                <div class="dia">
                    <h5>@d</h5>
                    <div class="slot">
                        @if (asignaciones.Any())
                        {
                            foreach (var a in asignaciones)
                            {
                                var comp = a.Competencia ?? "";
                                var res = a.Resultado ?? "";

                                // Obtener todos los resultados para esta competencia
                                var todosResultados = resultadosCombinados.ContainsKey(comp)
                                    ? resultadosCombinados[comp]
                                    : new List<string>();

                                // Crear string de todos los resultados
                                var todosResultadosStr = string.Join("|||", todosResultados);

                                // Contar resultados para mostrar en el badge
                                var cantidadResultados = todosResultados.Count;

                                <div class="asignacion">
                                    <!-- Instructor -->
                                    <strong>@(a.Instructor?.NombreCompletoInstructor ?? "Instructor")</strong><br />

                                    <!-- Competencia abreviada -->
                                    <div>
                                        <span class="link-detalle"
                                              role="button"
                                              data-bs-toggle="modal"
                                              data-bs-target="#detalleTextoModal"
                                              data-competencia="@comp"
                                              data-resultado="@res"
                                              data-todosresultados="@todosResultadosStr"
                                              data-horadesde="@fmt(a.HoraDesde)"
                                              data-horahasta="@fmt(a.HoraHasta)"
                                              data-idcompetencia="@(a.IdCompetencia ?? 0)">
                                            @shortWord(comp)
                                            @if (cantidadResultados > 0)
                                            {
                                                <span class="badge-resultados">@cantidadResultados</span>
                                            }
                                        </span>
                                    </div>

                                    <!-- Resultado abreviado -->
                                    <small class="muted d-block">
                                        <span class="link-detalle"
                                              role="button"
                                              data-bs-toggle="modal"
                                              data-bs-target="#detalleTextoModal"
                                              data-competencia="@comp"
                                              data-resultado="@res"
                                              data-todosresultados="@todosResultadosStr"
                                              data-horadesde="@fmt(a.HoraDesde)"
                                              data-horahasta="@fmt(a.HoraHasta)"
                                              data-idcompetencia="@(a.IdCompetencia ?? 0)">
                                            @if (!string.IsNullOrWhiteSpace(res))
                                            {
                                                @shortWord(res)
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">
                                                    <i class="bi bi-list-check me-1"></i>Ver @(cantidadResultados > 0 ? "todos los resultados" : "detalles")
                                                </span>
                                            }
                                        </span>
                                    </small>

                                    <!-- Horas -->
                                    <div class="horas-asignacion">
                                        <i class="bi bi-clock me-1"></i> @fmt(a.HoraDesde) – @fmt(a.HoraHasta)
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-muted text-center py-3">Sin asignaciones</div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- ✅ AVANCE POR COMPETENCIA -->
    <div class="horario-container mt-4">
        <div class="horario-header">Avance por competencia</div>
        <div class="p-3">
            <table class="table table-bordered align-middle mb-0">
                <thead>
                    <tr>
                        <th>Competencia</th>
                        <th class="text-center">Req.</th>
                        <th class="text-center">Prog.</th>
                        <th class="text-center">Pend.</th>
                        <th class="text-center">Extra</th>
                        <th class="text-center">%</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.CompetenciasResumen != null && Model.CompetenciasResumen.Any())
                    {
                        foreach (var c in Model.CompetenciasResumen)
                        {
                            var pct = c.Porcentaje;
                            var badge = pct >= 100 ? "bg-success"
                                       : pct >= 75 ? "bg-primary"
                                       : "bg-warning text-dark";

                            <tr>
                                <td>@c.Competencia</td>
                                <td class="text-center">@c.HorasRequeridas</td>
                                <td class="text-center">@c.HorasProgramadas</td>
                                <td class="text-center">@c.HorasPendientes</td>
                                <td class="text-center">
                                    @if (c.HorasExtra > 0)
                                    {
                                        <span class="text-success fw-bold">+@c.HorasExtra horas extra</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">0</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <span class="badge @badge">@pct %</span>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-3">
                                No hay datos por competencia.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


    <!-- ✅ TRAZABILIDAD POR RESULTADOS -->
    <div class="horario-container mt-4">
        <div class="horario-header">Trazabilidad por resultados</div>
        <div class="p-3">

            <table class="table table-bordered align-middle mb-0">
                <thead>
                    <tr>
                        <th>Competencia</th>
                        <th>Resultado</th>
                        <th class="text-center">Req.</th>
                        <th class="text-center">Prog.</th>
                        <th class="text-center">Pend.</th>
                        <th class="text-center">Extra</th>
                        <th class="text-center">Progreso</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model.Trazabilidad != null && Model.Trazabilidad.Any())
                    {
                        foreach (var x in Model.Trazabilidad)
                        {
                            var pct = x.Porcentaje;              // real (0..150..)
                            var pctBar = pct > 100 ? 100 : pct;  // visual top 100

                            var barClass = pct >= 100 ? "bg-success"
                                          : pct >= 75 ? "bg-primary"
                                          : "bg-warning";

                            <tr>
                                <td>@x.Competencia</td>
                                <td>@x.Resultado</td>
                                <td class="text-center">@x.HorasRequeridas</td>
                                <td class="text-center">@x.HorasProgramadas</td>
                                <td class="text-center">@x.HorasPendientes</td>

                                <td class="text-center">
                                    @if (x.HorasExtra > 0)
                                    {
                                        <span class="text-success fw-bold">+@x.HorasExtra horas extra</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">0</span>
                                    }
                                </td>

                                <td style="min-width:190px;">
                                    <div class="progress" style="height:18px;">
                                        <div class="progress-bar @barClass"
                                             role="progressbar"
                                             style="width:@pctBar%"
                                             aria-valuenow="@pctBar" aria-valuemin="0" aria-valuemax="100">
                                            @pct%
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-3">
                                No hay trazabilidad para este horario.
                            </td>
                        </tr>
                    }
                </tbody>

                @* Totales al final *@
                @if (Model.Trazabilidad != null && Model.Trazabilidad.Any())
                {
                    var extraTotal = Math.Max(Model.TotalProgramadas - Model.TotalRequeridas, 0);
                    var pctTotal = Model.TotalRequeridas > 0
                        ? Math.Round((decimal)Model.TotalProgramadas * 100m / Model.TotalRequeridas, 2)
                        : 0m;
                    var pctTotalBar = pctTotal > 100 ? 100 : pctTotal;
                    var barTotalClass = pctTotal >= 100 ? "bg-success" : "bg-warning";

                    <tfoot>
                        <tr class="fw-bold">
                            <td colspan="2" class="text-end">Totales</td>
                            <td class="text-center">@Model.TotalRequeridas</td>
                            <td class="text-center">@Model.TotalProgramadas</td>
                            <td class="text-center">@Model.TotalPendientes</td>

                            <td class="text-center">
                                @if (extraTotal > 0)
                                {
                                    <span class="text-success fw-bold">+@extraTotal horas extra</span>
                                }
                                else
                                { <span class="text-muted">0</span>}
                            </td>

                            <td>
                                <div class="progress" style="height:18px;">
                                    <div class="progress-bar @barTotalClass"
                                         style="width:@pctTotalBar%">
                                        @pctTotal%
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </tfoot>
                }

            </table>
        </div>
    </div>

</div>

