@model EjemploHorarios.Models.ViewModels.VerHorarioFichaVM
@using System.Linq

@{
    ViewBag.Title = "Horario de Ficha";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string[] dias = new[] { "Lunes", "Martes", "Miércoles", "Jueves", "Viernes", "Sábado" };
    Func<TimeSpan?, string> fmt = t => t.HasValue ? t.Value.ToString(@"hh\:mm") : "--:--";

    // Función para abreviar texto
    Func<string, string> shortWord = s =>
    {
        if (String.IsNullOrWhiteSpace(s)) return "";
        var parts = s.Trim().Split(' ');
        return parts[0] + (parts.Length > 1 ? "..." : "");
    };

    // Obtener TODOS los resultados de las asignaciones del horario, agrupados por competencia
    var todosResultadosPorCompetencia = Model.DetalleHorario?
        .Where(h => !string.IsNullOrEmpty(h.Competencia))
        .GroupBy(h => h.Competencia)
        .ToDictionary(
            g => g.Key,
            g => g.Where(h => !string.IsNullOrEmpty(h.Resultado))
                  .Select(h => h.Resultado)
                  .Distinct()
                  .ToList()
        ) ?? new Dictionary<string, List<string>>();

    // También obtener resultados de la trazabilidad (requeridos)
    var resultadosDeTrazabilidad = Model.Trazabilidad?
        .Where(t => !string.IsNullOrEmpty(t.Competencia) && !string.IsNullOrEmpty(t.Resultado))
        .GroupBy(t => t.Competencia)
        .ToDictionary(
            g => g.Key,
            g => g.Select(t => t.Resultado).Distinct().ToList()
        ) ?? new Dictionary<string, List<string>>();

    // Combinar ambas fuentes
    var resultadosCombinados = new Dictionary<string, List<string>>();

    // Primero agregar resultados del horario
    foreach (var kvp in todosResultadosPorCompetencia)
    {
        resultadosCombinados[kvp.Key] = new List<string>(kvp.Value);
    }

    // Luego agregar resultados de trazabilidad
    foreach (var kvp in resultadosDeTrazabilidad)
    {
        if (resultadosCombinados.ContainsKey(kvp.Key))
        {
            // Combinar sin duplicados
            foreach (var resultado in kvp.Value)
            {
                if (!resultadosCombinados[kvp.Key].Contains(resultado))
                {
                    resultadosCombinados[kvp.Key].Add(resultado);
                }
            }
        }
        else
        {
            resultadosCombinados[kvp.Key] = new List<string>(kvp.Value);
        }
    }

    // Para depuración - mostrar qué competencias y resultados tenemos
    ViewBag.DebugInfo = $"Competencias con resultados: {resultadosCombinados.Count}";
    foreach (var kvp in resultadosCombinados.Take(3))
    {
        ViewBag.DebugInfo += $" | {kvp.Key}: {kvp.Value.Count} resultados";
    }
}

